@model List<StockModel>
@{
    ViewData["Title"] = "Home Page";
   
  
}

<header class="container">
    <div class="row justify-content-center text-center align-content-center p-1 ">
        <div class="text-center col-lg-6 mt-5">
            <h1 class="m-2 ">Pick The Best Stocks On The Market</h1>
            <h3>Hottest Stocks on the Block!!</h3>
        </div>
            
        <div class="col-lg-6">
            <img src="~/images/hero.jpg" width="100%"/>
        </div>
            
       
    </div>
    <div class="text-center">
         <p>This data is for demo purposes.</p>
            <p>This is not financial advice!</p>
    </div>
    
</header>
<section class="row text-center">
    <div class="col-md-4 p-2">
        <h3>We Are Here</h3>
    </div>
    <div class="col-md-4 p-2">
        <h3>We Have No Fear</h3>
    </div>
    <div class="col-md-4 p-2">
        <h3>Shed No Tears</h3>
    </div>
    
</section>
<main>
    <h4 class="text-center text-success m-4">Top Ten</h4>
    <div class="row">
        @foreach(var stock in Model)
        {
            
            <div class="col-lg-3 col-md-4 col-sm-6 p-1 text-center">
                <a class="btn btn-success mx-2 w-100" asp-controller="Stocks" asp-action="GetStock" asp-route-ticker="@stock.ticker">
                <h5>@stock.ticker</h5>
                <h4>@stock.overall</h4>
                </a>

        </div>
        }
        
    </div>
</main>
<br />


