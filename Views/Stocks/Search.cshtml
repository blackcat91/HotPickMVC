@model List<StockModel>?

@{
}

@if(Model.Count > 0)
{
    <div class="row">
    @foreach(var stock in Model)
    {
        <div class="col-lg-3 p-1 m-1 ">
            <a class="btn w-100 h-100 btn-success" asp-controller="Stocks" asp-action="GetStock" asp-route-ticker="@stock.ticker">
                <h3>@stock.ticker</h3>
            <h4>@stock.company</h4>
            <h5>@stock.overall</h5>

            </a>
        </div>
    }
    
</div>
}
else{
    <h2>No Results Found!</h2>
}


